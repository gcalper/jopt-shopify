<!doctype html>
<html
  class="no-js{% if request.design_mode %} shopify-design-mode{% endif %}"
  lang="{{ request.locale.iso_code }}"
>
  <head>
    {%- if settings.favicon != blank -%}
      <link
        rel="icon"
        type="image/png"
        href="{{ settings.favicon | image_url: width: 32, height: 32 }}"
      >
    {%- endif -%}

    {% comment %} This a way to wait for main content to load when navigating to a new page so that the view transitions can work consistently {% endcomment %}
    <link
      rel="expect"
      href="#MainContent"
      blocking="render"
      id="view-transition-render-blocker"
    >

    {%- render 'meta-tags' -%}
    {%- render 'stylesheets' -%}
    {%- render 'fonts' -%}
    {%- render 'scripts' -%}
    {%- render 'theme-styles-variables' -%}
    {%- render 'color-schemes' -%}

    {% if request.design_mode %}
      {%- render 'theme-editor' -%}
    {% endif %}

    {{ content_for_header }}
  </head>

  <body class="page-width-{{ settings.page_width }} card-hover-effect-{{ settings.card_hover_effect }}">
    {% render 'skip-to-content-link', href: '#MainContent', text: 'accessibility.skip_to_text' %}
    <div id="header-group">
      {% sections 'header-group' %}
    </div>

    <script
      src="{{ 'critical.js' | asset_url }}"
      type="module"
      async
      blocking="render"
    ></script>

    <main
      id="MainContent"
      class="content-for-layout"
      role="main"
      data-page-transition-enabled="{{ settings.page_transition_enabled }}"
      data-product-transition="{{ settings.transition_to_main_product }}"
      data-template="{{ template }}"
    >
      {{ content_for_layout }}
    </main>

    {% sections 'footer-group' %}

    {% render 'search-modal' %}

    {% if settings.quick_add or settings.mobile_quick_add %}
      {% render 'quick-add-modal' %}
    {% endif %}

    <script>
    (function() {
      'use strict';
      
      function loadAndPlayVideos() {
        const deferredMedias = document.querySelectorAll('deferred-media[autoplay]');
        
        deferredMedias.forEach(function(deferredMedia) {
          const existingVideo = deferredMedia.querySelector('video');
          const existingIframe = deferredMedia.querySelector('iframe');
          
          if (existingVideo) {
            existingVideo.muted = true;
            existingVideo.play().catch(function() {});
          } else if (!existingIframe) {
            const template = deferredMedia.querySelector('template');
            if (template) {
              const content = template.content.cloneNode(true);
              deferredMedia.appendChild(content);
              
              setTimeout(function() {
                const video = deferredMedia.querySelector('video');
                if (video) {
                  video.muted = true;
                  video.play().catch(function() {});
                }
              }, 100);
            }
          }
        });
      }
      
      document.addEventListener('DOMContentLoaded', function() {
        setTimeout(loadAndPlayVideos, 500);
        
        document.addEventListener('change', function(e) {
          if (e.target.matches('select[name*="option"]') || 
              e.target.matches('select[name="id"]') ||
              e.target.matches('input[type="radio"]')) {
            setTimeout(loadAndPlayVideos, 300);
          }
        });
        
        document.addEventListener('click', function(e) {
          if (e.target.matches('input[type="radio"]') || 
              e.target.closest('label[for*="option"]')) {
            setTimeout(loadAndPlayVideos, 300);
          }
        });
        
        const mediaGallery = document.querySelector('media-gallery');
        if (mediaGallery) {
          const observer = new MutationObserver(function() {
            setTimeout(loadAndPlayVideos, 200);
          });
          observer.observe(mediaGallery, { 
            childList: true, 
            subtree: true 
          });
        }
        
        document.addEventListener('touchstart', function() {
          setTimeout(loadAndPlayVideos, 100);
        }, { once: true });
      });
    })();
    </script>
  </body>
</html>